#!/usr/bin/env sh

search_dir() {
	directory="$1"
	find "${directory}" -type f -name '*.json' | sed "s|$directory||g" |
		awk '{
		# Store the original line in the "orig" variable
		orig = "'"$directory"'" $0;

		# Replace underscores and hyphens with spaces
		gsub(/-/, " ");
		gsub(/_/, " ");

		# Remove the ".json" extension
		sub(/\.json$/, "");

		# Capitalize the first letter of the line
		first = substr($0, 1, 1);
		rest = substr($0, 2);
		$0 = toupper(first) tolower(rest);

		# Capitalize the first letter of each word
		for (i=1; i<=NF; i++) {
			if (i>1) {
				$i = toupper(substr($i, 1, 1)) tolower(substr($i, 2));
			}
		}

		# Add the string " ยง " and the original line to the end of the line
		$0 = $0 " ยง " orig;
	}1'
}

file_list() {
	search_dir "${XDG_CONFIG_HOME:-$HOME/.config}/wallust/colorschemes/dark/"
	search_dir "${XDG_CONFIG_HOME:-$HOME/.config}/wallust/colorschemes/light/"
	search_dir "${XDG_CONFIG_HOME:-$HOME/.config}/wallust/colorschemes/wallust/"
}

file_list | column -ts 'ยง' -o '->' | fzf-tmux --prompt '> Select Colorscheme > ' --preview 'echo {} | sed "s/.*-> //g" | xargs -ro -I {} wallust cs -T {}' | sed "s/.*-> //g" | xargs -ro -I {} wallust cs "{}"

# vim:fileencoding=utf-8:foldmethod=marker
