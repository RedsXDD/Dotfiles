#!/usr/bin/env sh

# Script dependencies: gnutls, fzf, paru

case "${1:--S}" in
	'-S')
		if [ -n "$2" ]; then
			paru "$@"
		else
			paru --color=always -Sl |
				sed 's|\s|/|; s/\s\+.*unknown-version//g' |
				fzf-tmux -p 75% -w 75% --prompt '> Install package(s) > ' --multi --preview 'paru -Si {1}' |
				cut -d'/' -f2 | cut -d' ' -f1 | xargs -ro paru -S
		fi
	;;

	'-R')
		paru --color=always -Qs |
			sed '/^\s\+/d; ; s/\s\+.*unknown-version//g' |
			fzf-tmux -p 75% -w 75% --prompt '> Remove package(s) > ' --multi --preview 'paru -Qi {1}' |
			cut -d'/' -f2 | cut -d' ' -f1 | xargs -ro sudo pacman -Rusnv
	;;

	'-Q')
		paru --color=always -Qs |
			sed '/^\s\+/d; ; s/\s\+.*unknown-version//g' |
			fzf-tmux -p 75% -w 75% --prompt '> Get info from package(s) > ' --multi --preview 'paru -Qi {1}' |
			cut -d'/' -f2 | cut -d' ' -f1 | xargs -ro paru -Qi
	;;

	*) paru "$@" ;;
esac

# vim:fileencoding=utf-8:foldmethod=marker
