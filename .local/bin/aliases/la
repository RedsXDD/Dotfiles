#!/usr/bin/env sh

if [ "${USE_LS}" ] || ! which eza >/dev/null 2>&1; then
        ls --group-directories-first --color -1A "$@"
        return 0
fi

main_cmd() { eza --group-directories-first --color=always -1a "$@"; }
if [ -z "$DISPLAY" ]; then
        main_cmd "$@"
else
        main_cmd --icons "$@"
fi

# vim:fileencoding=utf-8:foldmethod=marker
