#!/usr/bin/env sh

# Script dependencies: gnutls, fzf, zellij

zj_sessions="$(zellij list-sessions)"
session_num="$(echo "$zj_sessions" | wc -l)"

if [ "$session_num" -ge 2 ]; then
	echo "$zj_sessions" | fzf-tmux -p 50% -w 50% --prompt '> Search Zellij Sessions >' | sed 's/ \[.*//g' | xargs -ro zellij attach
else
	zellij attach -c
fi

# vim:fileencoding=utf-8:foldmethod=marker
