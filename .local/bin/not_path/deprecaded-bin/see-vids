#!/usr/bin/env sh

if [ -z "$1" ]; then
 mpv *.mov , *.mkv , *.m4v , *.avi , *.flv , *.mts , *.3gp , *.insv , *.m2ts , *.mp3 , *.mp4 , *.m4a , *.ogg , *.wav , *.aac , *.flac , *.opus , *.vorbis
else
 mpv "$@"*.mov , "$@"*.mkv , "$@"*.m4v , "$@"*.avi , "$@"*.flv , "$@"*.mts , "$@"*.3gp , "$@"*.insv , "$@"*.m2ts , "$@"*.mp3 , "$@"*.mp4 , "$@"*.m4a , "$@"*.ogg , "$@"*.wav , "$@"*.aac , "$@"*.flac , "$@"*.opus , "$@"*.vorbis
fi

