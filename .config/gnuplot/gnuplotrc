# Basic configs:
set isosamples 50
set hidden3d

# Key, border & grid colors:
set grid xtics ytics linetype 1 linewidth 1 linecolor rgb '#C6D0F5'
set border linewidth 3 linecolor rgb '#8CAAEE'
set key textcolor rgb '#C6D0F5'

# Labels:
set xlabel "X axis" textcolor rgb '#C6D0F5'
set ylabel "Y axis" textcolor rgb '#C6D0F5'
set zlabel "Z axis" textcolor rgb '#C6D0F5'

# Set background color:
set terminal GNUTERM background rgb '#303446'
set object rectangle from screen 0,0 to screen 1,1 behind fillcolor rgb '#303446' fillstyle solid noborder

# Color some lines:
set linetype 1 linewidth 2 pointtype 6 linecolor rgb '#F4B8E4'
set linetype 2 linewidth 2 pointtype 6 linecolor rgb '#B5BFE2'
set linetype 3 linewidth 2 pointtype 6 linecolor rgb '#8CAAEE'
set linetype 4 linewidth 2 pointtype 6 linecolor rgb '#81C8BE'
set linetype 5 linewidth 2 pointtype 6 linecolor rgb '#A6D189'
set linetype 6 linewidth 2 pointtype 6 linecolor rgb '#E5C890'
set linetype 7 linewidth 2 pointtype 6 linecolor rgb '#E78284'
