# vim:fileencoding=utf-8:foldmethod=marker:filetype=sh

# Pacman/paru aliases:
alias p='pacman --color=auto'
alias sp='sudo pacman --color=auto'
alias pp='paru --color=auto'
alias fp='fzf-paru'

# Remove/list orphaned packages:
alias pc='paru -Qqd | paru -Rsu --print -'
alias pcl='sudo pacman -Rusnv $(paru -Qdtq)'

# Get the fastest mirrors:
alias mirror='sudo reflector -f 30 -l 30 --number 10 --verbose --save /etc/pacman.d/mirrorlist && sudo pacman -Syy'
alias mirrord='sudo reflector --latest 50 --number 20 --sort delay --verbose --save /etc/pacman.d/mirrorlist && sudo pacman -Syy'
alias mirrors='sudo reflector --latest 50 --number 20 --sort score --verbose --save /etc/pacman.d/mirrorlist && sudo pacman -Syy'
alias mirrora='sudo reflector --latest 50 --number 20 --sort age --verbose --save /etc/pacman.d/mirrorlist && sudo pacman -Syy'
