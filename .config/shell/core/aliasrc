# vim:fileencoding=utf-8:foldmethod=marker:filetype=sh

# Neovim aliases:
if [ -n "$EDITOR" ]; then
	alias v="$EDITOR"
else
	for editor in nvim vim vi; do
		[ -x "$(command -v "$editor")" ] && alias v="$editor" && export EDITOR="$editor" && continue
	done
	unset editor
fi
alias V='neovide'
alias sv='doasedit'

# Improved defaults:
alias bc='bc -lq'
alias cal='cal --color=auto -sy'
alias cat='bat'
alias chmod='chmod --preserve-root -c'
alias chown='sudo chown --preserve-root -c'
alias diff='diff --color=auto -Ebsu'
alias dl='\du -shx -- * | sort -rh | head -20'
alias egrep='grep -E'
alias fc-cache='fc-cache -rv'
alias fd='fd --color auto --hidden'
alias fgrep='grep -F'
alias free='free -hwtl'
alias grep='grep --color=auto'
alias mpv='mpv --fs'

# Make mv/cp/ln/rm interactive:
alias mv='mv -vi'
alias cp='cp -rvi'
alias ln='ln -svi'
alias rm='rm -rvI'
alias mkdir='mkdir -pv'

# Alternatives:
# alias df='df -Th'
alias df='duf'
# alias du='du -sh'
alias du='dust'
# alias ps='ps -aux'
alias ps='procs'

# Other aliases:
# alias clh='history -c'
alias fzf-tmux='\fzf-tmux -p 50% -w 50%'
alias ktmux='tmux kill-server'
[ -f "$HOME/.local/bin/pywal/pzel" ] && alias zellij='pzel'
alias kzel='\zellij kill-all-sessions'
# alias sl='sl -e || clear'
# alias dua='dua i'
alias lynx='lynx -vikeys'
alias tty-clock='tty-clock -sbcC 4 -f "%A, %B %d, %Y"'
alias cmatrix='cmatrix -abC blue -u 3'
alias glow='glow -ap'
alias lf='lfcd'
alias info='info --vi-keys --init-file ~/.config/infokey'
alias q='exit'
alias cbonsai='cbonsai -li'

# Pywal related:
alias zathura='zatp'
alias gnuplot='gplot'
alias btop='ptop'
alias cava='pcava'
# alias imv='pimv -df -t 2'

# Power commands:
alias shutdown='\systemctl poweroff'
alias reboot='\systemctl reboot'
alias suspend='\systemctl suspend'
alias hibernate='\systemctl hibernate'
