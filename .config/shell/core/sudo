# vim:fileencoding=utf-8:foldmethod=marker:filetype=sh

# Better sudo & doas:
alias sudo='sudo '
alias doas='\doas --'

# Better user switching:
alias su='\su -lw DISPLAY'

# No sudo required:
alias locale-gen='sudo locale-gen'
alias make='sudo make'
alias mount='sudo mount'
alias passwd='sudo passwd'
alias mandb='sudo mandb'
alias systemctl='sudo systemctl'
alias umount='sudo umount'
alias updatedb='sudo updatedb'
alias useradd='sudo useradd'
alias userdel='sudo userdel'
alias usermod='sudo usermod'
alias grubconf='sudo grub-mkconfig -o /boot/grub/grub.cfg'
alias smartctl='sudo smartctl'

# Switch between shells:
# Not recommended to switch default SHELL from bash.
alias tobash='sudo chsh "$USER" -s /bin/bash && echo "Now log out."'
alias tozsh='sudo chsh "$USER" -s /bin/zsh && echo "Now log out."'
# alias tofish='sudo chsh "$USER" -s /bin/fish && echo "Now log out."'
