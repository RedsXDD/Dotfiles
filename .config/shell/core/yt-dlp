# vim:fileencoding=utf-8:foldmethod=marker:filetype=sh

# Better yt-dlp:
alias yt-dlp='\yt-dlp --color=auto --embed-subs --embed-thumbnail --embed-metadata --output "%(title)s [%(id)s].%(ext)s"'

# Yt-dlp audio only:
alias yta-aac='yt-dlp -extract-audio --audio-format aac'
alias yta-best='yt-dlp --extract-audio --audio-format best'
alias yta-flac='yt-dlp --extract-audio --audio-format flac'
alias yta-m4a='yt-dlp --extract-audio --audio-format m4a'
alias yta-mp3='yt-dlp --extract-audio --audio-format mp3'
alias yta-opus='yt-dlp --extract-audio --audio-format opus'
alias yta-vorbis='yt-dlp --extract-audio --audio-format vorbis'
alias yta-wav='yt-dlp --extract-audio --audio-format wav'

# Yt-dlp video:
alias ytv-aac='yt-dlp --audio-format aac'
alias ytv-best='yt-dlp --audio-format best'
alias ytv-flac='yt-dlp --audio-format flac'
alias ytv-m4a='yt-dlp --audio-format m4a'
alias ytv-mp3='yt-dlp --audio-format mp3'
alias ytv-opus='yt-dlp --audio-format opus'
alias ytv-vorbis='yt-dlp --audio-format vorbis'
alias ytv-wav='yt-dlp --audio-format wav'
alias ytv-best='yt-dlp -f bestvideo+bestaudio'
